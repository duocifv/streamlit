AuthUserFile /home/limebat34/www/webdata_wwws-kyoritsumembers/.htpasswd
AuthGroupFile /dev/null
AuthName "Input ID and Password."
AuthType Basic
require valid-user
<Files ~ "^.(htpasswd|htaccess)$">
    deny from all
</Files>

# SSI使用
Options +Includes
AddOutputFilter INCLUDES .html .htm

RewriteEngine on
RewriteCond %{THE_REQUEST} ^.*/index.html
RewriteRule ^(.*)index.html$ https:/wwws-kyoritsumembers.dsd.dokidoki-gw.com/$1 [R=301,L]

##読み込み優先度変える時
#DirectoryIndex index.php index.html index.cgi

